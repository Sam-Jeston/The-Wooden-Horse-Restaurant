<div class="container">
  <div class="row">
    <div class="box">
      <div class="col-lg-12 text-center">
        <h2>The countdown has begun</h2>
      </br>
      <div id="countdown"></div>
      </div>
        <br>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%=image_tag 'iconwhiteontransparent.gif', class: "img-responsive", style: "display:block; margin: 0 auto; width:80%; height: 80%; opacity: 0.8;" %>
      </br>
    </div>
  </div>
</div>
<!-- /.container -->
<%= javascript_tag do %>
  // Countdown timers

  $("#countdown")
    .countdown("2015/08/14", function(event) {
      $(this).text(
        event.strftime('%D days %H:%M:%S')
      );
  });

  // auto-set carousel time on page load

  $(document).ready(function() {
    $('.carousel').carousel({
      interval: 4000
    })
  });
<% end %>
