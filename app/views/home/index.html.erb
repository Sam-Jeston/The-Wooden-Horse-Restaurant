<div class="container">
  <div class="row">
    <div class="box">
      <div class="col-lg-12 text-center">
        <h2>The countdown has begun</h2>
      </br>
      <div class="hidden-xs" style="text-align:center; display:inline-block">
        <div class="grand-opening" style="width:auto"></div>
      </div>
      <div class="hidden-lg hidden-md hidden-sm" style="text-align:center; display:inline-block">
        <div class="grand-opening-small" style="width:auto; zoom:0.45;"></div>
      </div>
        <script type="text/javascript">
          $('.grand-opening').FlipClock(new Date(2015,7,14).getTime()/1000 - new Date().getTime()/1000, {
            clockFace: 'DailyCounter',
            countdown: true
          });
        </script>
        <script type="text/javascript">
          $('.grand-opening-small').FlipClock(new Date(2015,7,14).getTime()/1000 - new Date().getTime()/1000, {
            clockFace: 'DailyCounter',
            countdown: true
          });
        </script>
        <br>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%=image_tag 'iconwhiteontransparent.gif', class: "img-responsive", style: "display:block; margin: 0 auto; width:80%; height: 80%; opacity: 0.8;" %>
      </br>
    </div>
  </div>
  <script type='text/javascript'>
  $(document).ready(function() {
    $('.carousel').carousel({
      interval: 4000
    })
  });
  </script>
</div>
<!-- /.container -->
