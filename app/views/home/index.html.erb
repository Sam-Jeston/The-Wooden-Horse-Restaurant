<div class="container">
  <div class="row">
    <div class="box">
      <div class="col-lg-12 text-center">
        <h3>Welcome to&nbsp;<span itemprop="name">Wooden Horse Restaurant</span>&nbsp;& Bar</h3>
        </br>
        <h3>We are now open!</h3>
        </br>
        <div id="carousel-food" class="carousel slide">
          <!-- Indicators -->
          <ol class="carousel-indicators hidden-xs">
            <li data-target="#carousel-food" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-food" data-slide-to="1"></li>
            <li data-target="#carousel-food" data-slide-to="2"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <div class="item active">
              <%=image_tag 'entree.jpg', class: "img-responsive img-full", style: "opacity: 0.8", alt: "" %>
            </div>
            <div class="item">
              <%=image_tag 'main_f.jpg', class: "img-responsive img-full", style: "opacity: 0.8", alt: "" %>
            </div>
            <div class="item">
              <%=image_tag 'dessert.jpg', class: "img-responsive img-full", style: "opacity: 0.8", alt: "" %>
            </div>
          </div>

          <!-- Controls -->
          <a class="left carousel-control" href="#carousel-food" data-slide="prev">
            <span class="icon-prev"></span>
          </a>
          <a class="right carousel-control" href="#carousel-food" data-slide="next">
            <span class="icon-next"></span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%=image_tag 'iconwhiteontransparent.png', class: "img-responsive", style: "display:block; margin: 0 auto; width:80%; height: 80%; opacity: 0.8;" %>
      </br>
    </div>
  </div>
</div>
<!-- /.container -->
<%= javascript_tag do %>

  // auto-set carousel time on page load

  $(document).ready(function() {
    $('.carousel').carousel({
      interval: 4000
    })
  });
<% end %>
