<div class="container">
  <div class="row">
    <div class="box">
      <div class="col-lg-12 text-center">
        <h3>Welcome to the Wooden Horse Restaurant</h3>
      </br>
        <h3>The countdown has begun!</h3>
      </br>
      <div class="hidden-xs" style="text-align:center; display:inline-block">
        <div class="grand-opening" style="width:auto"></div>
      </div>
      <div class="hidden-lg hidden-md hidden-sm" style="text-align:center; display:inline-block">
        <h4><div id="countdown"></div></h4>
      </div>
        <br>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%=image_tag 'iconwhiteontransparent.png', class: "img-responsive", style: "display:block; margin: 0 auto; width:80%; height: 80%; opacity: 0.8;" %>
      </br>
    </div>
  </div>
</div>
<!-- /.container -->
<%= javascript_tag do %>
  // Countdown timers

  $('.grand-opening').FlipClock(new Date(2015,7,14).getTime()/1000 - new Date().getTime()/1000, {
    clockFace: 'DailyCounter',
    countdown: true
  });

  $("#countdown")
    .countdown("2015/08/14", function(event) {
      $(this).text(
        event.strftime('%D days, %H hours, %M minutes, %S seconds')
      );
    });

  // auto-set carousel time on page load

  $(document).ready(function() {
    $('.carousel').carousel({
      interval: 4000
    })
  });
<% end %>
